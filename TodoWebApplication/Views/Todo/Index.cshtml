@model List<TodoRepository.TodoItem>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <style>
        h2 {
            font-size: 12px;
        }
    </style>
</head>
<body>
<h1>Active Todos</h1><br/>
    <div>
        <a asp-controller="Todo" asp-action="Add">Add new Todo</a>
        <br/>
        <a asp-controller="Todo" asp-action="SeeCompleted"> See completed Todos</a>
        @if (Model != null)
        {
            foreach (var todo in Model)
            {
                <h2>
                    @todo.Text <br/> @todo.DateCreated <br/> <a asp-controller="Todo" asp-action="MarkCompleted" asp-route-id="@todo.Id">Mark completed</a>
                </h2>
            }
        }


    </div>
</body>
</html>